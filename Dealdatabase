  <script>
    document.getElementById('yr').textContent = new Date().getFullYear();

    // ================== CONFIG ==================
    const CONFIG = {
      FREE_MODE: true,                 // set false when you want to gate
      BLUR_START_INDEX: 5,            // blur from row #6 onward when not free/not subscribed
      // Your published Google Sheets links:
      DEALS_CSV_URL: 'https://docs.google.com/spreadsheets/d/e/2PACX-1vSoodUG0hcux9GxoqYAm8E3pByMCm0MaP8-gFDGMywa5e8pN8L0YHhVBw4YAPYhtvCdGByRkIuTcLzG/pub?gid=0&single=true&output=csv',
      NEWS_CSV_URL:  'https://docs.google.com/spreadsheets/d/e/2PACX-1vSoodUG0hcux9GxoqYAm8E3pByMCm0MaP8-gFDGMywa5e8pN8L0YHhVBw4YAPYhtvCdGByRkIuTcLzG/pub?gid=245076352&single=true&output=csv'
    };

    let isSubscriber = CONFIG.FREE_MODE || (localStorage.getItem('isSub') === '1');

    // ================== UTIL ==================
    function csvToRows(text){
      // naive CSV split; for complex CSV consider a parser later
      return text.split(/\r?\n/).filter(Boolean).map(r=>r.split(','));
    }
    function headerIndex(headerArr, name){
      return headerArr.findIndex(h=>h.trim().toLowerCase()===name);
    }
    function esc(s){ return (s||'').replace(/&/g,'&amp;').replace(/</g,'&lt;').replace(/>/g,'&gt;'); }

    // ================== DATA (fallback demo) ==================
    let deals = [];
    let news  = [];

    // ================== FETCH SHEETS ==================
    async function maybeFetchDeals(){
      // Skip only if still placeholder
      if (CONFIG.DEALS_CSV_URL.includes('YOUR_SHEET_ID')) return;
      try{
        const res = await fetch(CONFIG.DEALS_CSV_URL, {cache:'no-store'});
        if(!res.ok) throw new Error('Deals CSV fetch failed');
        const rows = csvToRows(await res.text());
        if(rows.length<2) return;
        const header = rows[0].map(h=>h.trim().toLowerCase());
        const idx = n=>headerIndex(header,n);
        deals = rows.slice(1).map(c=>({
          date:      c[idx('date')]||'',
          company:   c[idx('company')]||'',
          target:    c[idx('target')]||'',
          acquirer:  c[idx('acquirer')]||'',
          value:     c[idx('value')]||'',
          ev_sales:  c[idx('ev_sales')]||'',
          ev_ebitda: c[idx('ev_ebitda')]||''
        }));
      }catch(e){ console.warn('Deals CSV error', e); }
    }

    async function maybeFetchNews(){
      // Skip only if still placeholder
      if (CONFIG.NEWS_CSV_URL.includes('YOUR_SHEET_ID')) return;
      try{
        const res = await fetch(CONFIG.NEWS_CSV_URL, {cache:'no-store'});
        if(!res.ok) throw new Error('News CSV fetch failed');
        const rows = csvToRows(await res.text());
        if(rows.length<2) return;
        const header = rows[0].map(h=>h.trim().toLowerCase());
        const idx = n=>headerIndex(header,n);
        news = rows.slice(1).map(c=>({
          title: c[idx('title')]||'',
          blurb: c[idx('blurb')]||'',
          link:  c[idx('link')]||'#'
        }));
      }catch(e){ console.warn('News CSV error', e); }
    }

    // ================== RENDER ==================
    function isBlurIdx(i){ return !isSubscriber && i >= CONFIG.BLUR_START_INDEX; }

    function renderTopDeals(){
      const tbody = document.getElementById('deals-tbody');
      tbody.innerHTML = '';
      (deals.slice(0,3).length ? deals.slice(0,3) : [
        {date:'—', company:'Add deals to your sheet', target:'', acquirer:'', value:'', ev_sales:'', ev_ebitda:''},
        {date:'—', company:'then Publish as CSV', target:'', acquirer:'', value:'', ev_sales:'', ev_ebitda:''},
        {date:'—', company:'and paste URL in CONFIG', target:'', acquirer:'', value:'', ev_sales:'', ev_ebitda:''}
      ]).forEach(d=>{
        const tr = document.createElement('tr');
        tr.innerHTML = `
          <td>${esc(d.date)}</td>
          <td class="logo-cell"><span class="logo-box">${esc((d.company||'').slice(0,2))}</span>${esc(d.company)}</td>
          <td>${esc(d.target)}</td>
          <td>${esc(d.acquirer)}</td>
          <td class="td-num">${esc(d.value)}</td>
          <td class="td-num">${esc(d.ev_sales)}</td>
          <td class="td-num">${esc(d.ev_ebitda)}</td>`;
        tbody.appendChild(tr);
      });
    }

    function renderAllDeals(){
      const tbody = document.getElementById('all-deals-tbody');
      tbody.innerHTML = '';
      (deals.length?deals:[]).forEach((d,i)=>{
        const tr = document.createElement('tr');
        const blurCls = isBlurIdx(i) ? 'blurred' : '';
        tr.innerHTML = `
          <td>${i+1}</td>
          <td>${esc(d.date)}</td>
          <td class="logo-cell"><span class="logo-box">${esc((d.company||'').slice(0,2))}</span>${esc(d.company)}</td>
          <td>${esc(d.target)}</td>
          <td>${esc(d.acquirer)}</td>
          <td class="td-num ${blurCls}">${esc(d.value)}</td>
          <td class="td-num ${blurCls}">${esc(d.ev_sales)}</td>
          <td class="td-num ${blurCls}">${esc(d.ev_ebitda)}</td>`;
        tbody.appendChild(tr);
      });
    }

    function renderNews(){
      const grid = document.getElementById('news-grid');
      grid.innerHTML = '';
      (news.length?news:[
        {title:'Add a News CSV', blurb:'Publish your News tab as CSV and paste the link into CONFIG.NEWS_CSV_URL.', link:'#'}
      ]).forEach(n=>{
        const card = document.createElement('article');
        card.className = 'card news';
        card.innerHTML = `<h3>${esc(n.title)}</h3><p>${esc(n.blurb)}</p><p style="margin-top:8px"><a href="${esc(n.link)}" target="_blank" rel="noopener">Read more →</a></p>`;
        grid.appendChild(card);
      });
    }

    // ================== EXPORT ==================
    function exportDealsCsv(){
      const headers = ['date','company','target','acquirer','value','ev_sales','ev_ebitda'];
      const rows = (deals.length?deals:[{date:'',company:'',target:'',acquirer:'',value:'',ev_sales:'',ev_ebitda:''}])
        .map(d=> headers.map(h=> (d[h]||'').toString().replace(/"/g,'""') ));
      const csv = [headers, ...rows].map(r=> r.map(f=>`"${f}"`).join(',')).join('\n');
      const blob = new Blob([csv], {type:'text/csv;charset=utf-8;'});
      const url = URL.createObjectURL(blob);
      const a = document.createElement('a');
      a.href = url; a.download = 'deals.csv'; a.click();
      URL.revokeObjectURL(url);
    }

    document.getElementById('export-deals')?.addEventListener('click', exportDealsCsv);
    document.getElementById('export-deals-all')?.addEventListener('click', exportDealsCsv);

    // ================== INIT ==================
    (async function init(){
      await Promise.all([maybeFetchDeals(), maybeFetchNews()]);
      renderTopDeals();
      renderAllDeals();
      renderNews();
    })();
  </script>
</body>
</html>
