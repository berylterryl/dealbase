    .badge{display:inline-block;background:var(--chip);border:1px solid var(--line);padding:2px 8px;border-radius:999px;font-size:11px}
    .blurred{position:relative;filter:blur(3px)}
    .blurred::after{content:"Subscribe to view";position:absolute;inset:0;display:grid;place-items:center;font-weight:700;color:#0b1220;background:rgba(255,255,255,0.80);border-top:1px solid var(--line)}

    /* Insights cards */
