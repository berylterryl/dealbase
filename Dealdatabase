  <script>
    document.getElementById('yr').textContent = new Date().getFullYear();

    // ================== CONFIG ==================
    const CONFIG = {
      FREE_MODE: true,                 // set false when you want to gate
      BLUR_START_INDEX: 5,            // blur from row #6 onward (0-indexed) when not free/not subscribed
      DEALS_CSV_URL: 'https://docs.google.com/spreadsheets/d/YOUR_SHEET_ID/export?format=csv&gid=YOUR_GID',
      NEWS_CSV_URL: 'https://docs.google.com/spreadsheets/d/YOUR_SHEET_ID/export?format=csv&gid=YOUR_NEWS_GID'
    };

    let isSubscriber = CONFIG.FREE_MODE || (localStorage.getItem('isSub') === '1');

    // ================== UTIL ==================
    function csvToRows(text){
      // naive CSV split; for complex CSV consider a parser
      return text.split(/
?
/).filter(Boolean).map(r=>r.split(','));
    }
    function headerIndex(headerArr, name){
      return headerArr.findIndex(h=>h.trim().toLowerCase()===name);
    }
    function esc(s){ return (s||'').replace(/&/g,'&amp;').replace(/</g,'&lt;').replace(/>/g,'&gt;'); }

    // ================== DATA ==================
    let deals = [
      {date:'2025-10-03', company:'NBO Data Centers JV', target:'NBO Towers Co', acquirer:'Atlas Infra (60%)', value:'~$95m', ev_sales:'—', ev_ebitda:'10.5×'},
      {date:'2025-10-02', company:'FreshFoods Ltd', target:'FreshFoods Ltd', acquirer:'LakeCap (68%)', value:'Undisc.', ev_sales:'1.3×', ev_ebitda:'8.1×'},
      {date:'2025-09-28', company:'AgriPay', target:'AgriPay', acquirer:'Acacia (Series A)', value:'$12m', ev_sales:'—', ev_ebitda:'—'},
      {date:'2025-09-26', company:'GridFlow', target:'GridFlow', acquirer:'Norrsken (Seed)', value:'$4.5m', ev_sales:'—', ev_ebitda:'—'},
      {date:'2025-09-22', company:'CargoLink', target:'CargoLink', acquirer:'Novastar (Pre‑A)', value:'$3.2m', ev_sales:'—', ev_ebitda:'—'},
      {date:'2025-09-18', company:'FiberNet EA', target:'FiberNet EA', acquirer:'BlueTel (51%)', value:'$—', ev_sales:'—', ev_ebitda:'11.0×'},
      {date:'2025-09-12', company:'PackCo', target:'PackCo', acquirer:'Strategic Buyer', value:'$—', ev_sales:'—', ev_ebitda:'—'}
    ];

    let news = [
      {title:'Policy hold; liquidity stable across bills',
       blurb:'MPC maintains policy rate as core inflation stays contained. Liquidity operations steady the short end while credit growth inches sideways.', link:'#'},
      {title:'Infra appetite widens to data centers',
       blurb:'Allocation shifts from towers to data centers as hyperscaler demand firms. Watch for FX‑linked leases and grid redundancy clauses.', link:'#'},
      {title:'Agri‑fintech momentum builds',
       blurb:'Embedded finance platforms report improving cohort paybacks. Funding likely to favor unit‑economics‑positive models.', link:'#'}
    ];

    async function maybeFetchDeals(){
      if(!CONFIG.DEALS_CSV_URL.includes('YOUR_SHEET_ID')) return; // skip until user configures
      try{
        const res = await fetch(CONFIG.DEALS_CSV_URL, {cache:'no-store'});
        if(!res.ok) throw new Error('Deals CSV fetch failed');
        const rows = csvToRows(await res.text());
        if(rows.length<2) return;
        const header = rows[0].map(h=>h.trim().toLowerCase());
        const idx = n=>headerIndex(header,n);
        deals = rows.slice(1).map(c=>({
          date: c[idx('date')]||'',
          company: c[idx('company')]||'',
          target: c[idx('target')]||'',
          acquirer: c[idx('acquirer')]||'',
          value: c[idx('value')]||'',
          ev_sales: c[idx('ev_sales')]||'',
          ev_ebitda: c[idx('ev_ebitda')]||''
        }));
      }catch(e){ console.warn('Deals CSV error', e); }
    }

    async function maybeFetchNews(){
      if(!CONFIG.NEWS_CSV_URL.includes('YOUR_SHEET_ID')) return; // skip until user configures
      try{
        const res = await fetch(CONFIG.NEWS_CSV_URL, {cache:'no-store'});
        if(!res.ok) throw new Error('News CSV fetch failed');
        const rows = csvToRows(await res.text());
        if(rows.length<2) return;
        const header = rows[0].map(h=>h.trim().toLowerCase());
        const idx = n=>headerIndex(header,n);
        news = rows.slice(1).map(c=>({
          title: c[idx('title')]||'',
          blurb: c[idx('blurb')]||'',
          link: c[idx('link')]||'#'
        }));
      }catch(e){ console.warn('News CSV error', e); }
    }

    // ================== RENDER ==================
    function isBlurIdx(i){ return !isSubscriber && i >= CONFIG.BLUR_START_INDEX; }

    function renderTopDeals(){
      const tbody = document.getElementById('deals-tbody');
      tbody.innerHTML = '';
      deals.slice(0,3).forEach(d=>{
        const tr = document.createElement('tr');
        tr.innerHTML = `
          <td>${esc(d.date)}</td>
          <td class="logo-cell"><span class="logo-box">${esc((d.company||'').slice(0,2))}</span>${esc(d.company)}</td>
          <td>${esc(d.target)}</td>
          <td>${esc(d.acquirer)}</td>
          <td class="td-num">${esc(d.value)}</td>
          <td class="td-num">${esc(d.ev_sales)}</td>
          <td class="td-num">${esc(d.ev_ebitda)}</td>`;
        tbody.appendChild(tr);
      });
    }

    function renderAllDeals(){
      const tbody = document.getElementById('all-deals-tbody');
      tbody.innerHTML = '';
      deals.forEach((d,i)=>{
        const tr = document.createElement('tr');
        const blurCls = isBlurIdx(i) ? 'blurred' : '';
        tr.innerHTML = `
          <td>${i+1}</td>
          <td>${esc(d.date)}</td>
          <td class="logo-cell"><span class="logo-box">${esc((d.company||'').slice(0,2))}</span>${esc(d.company)}</td>
          <td>${esc(d.target)}</td>
          <td>${esc(d.acquirer)}</td>
          <td class="td-num ${blurCls}">${esc(d.value)}</td>
          <td class="td-num ${blurCls}">${esc(d.ev_sales)}</td>
          <td class="td-num ${blurCls}">${esc(d.ev_ebitda)}</td>`;
        tbody.appendChild(tr);
      });
    }

    function renderNews(){
      const grid = document.getElementById('news-grid');
      grid.innerHTML = '';
      news.forEach(n=>{
        const card = document.createElement('article');
        card.className = 'card news';
        card.innerHTML = `<h3>${esc(n.title)}</h3><p>${esc(n.blurb)}</p><p style="margin-top:8px"><a href="${esc(n.link)}" target="_blank" rel="noopener">Read more →</a></p>`;
        grid.appendChild(card);
      });
    }

    // ================== EXPORT ==================
    function exportDealsCsv(){
      const headers = ['date','company','target','acquirer','value','ev_sales','ev_ebitda'];
      const rows = deals.map(d=> headers.map(h=> (d[h]||'').toString().replace(/"/g,'""') ));
      const csv = [headers, ...rows].map(r=> r.map(f=>`"${f}"`).join(',')).join('
');
      const blob = new Blob([csv], {type:'text/csv;charset=utf-8;'});
      const url = URL.createObjectURL(blob);
      const a = document.createElement('a');
      a.href = url; a.download = 'deals.csv'; a.click();
      URL.revokeObjectURL(url);
    }

    document.getElementById('export-deals')?.addEventListener('click', exportDealsCsv);
    document.getElementById('export-deals-all')?.addEventListener('click', exportDealsCsv);

    // ================== INIT ==================
    (async function init(){
      await Promise.all([maybeFetchDeals(), maybeFetchNews()]);
      renderTopDeals();
      renderAllDeals();
      renderNews();
    })();
  </script>
</body>
</html>
